---
import Navigation from './Navigation.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header
    class="w-full border-b border-ctp-surface0 bg-ctp-base/95 backdrop-blur-sm sticky top-0 z-50 transition-colors duration-200"
>
    <div
        class="mx-auto flex h-16 max-w-4xl items-center justify-between px-4 sm:px-6 lg:px-8"
    >
        <a
            href="/"
            class="text-lg font-bold text-ctp-mauve hover:text-ctp-pink transition-colors"
        >
            ollynevard.dev
        </a>

        <div class="flex items-center gap-4">
            <Navigation />
            <ThemeToggle />
        </div>
    </div>
</header>
